<Window x:Class="fileManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fileManager"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="File Manager" Height="180" Width="500" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="15" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBox x:Name="directionTextBox" Height="20" Width="300"/>
            <Button x:Name="chooseDirButton" Height="20" Content="Choose directory"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="10" HorizontalAlignment="Right">
            <Button x:Name="sendDataButton" Content="Start" Width="50"/>
        </StackPanel>
    </Grid>
</Window>
